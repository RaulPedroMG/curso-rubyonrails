<%= form_with model: @product do |form| %>
  <% @product.errors.full_messages.each do |error| %>
    <%= error %>
    <br />
  <% end %>
  <br />
  <div class="form-group">
    <%= form.label :'Título' %>
    <%= form.text_field :title, type: 'text', class: 'form-control', placeholder: 'Título' %>
  </div>
  <div class="form-group">
    <%= form.label :'Descripción' %>
    <%= form.text_area :description, class: 'form-control', placeholder: 'Descripción' %>
  </div>
  <div class="form-group">
    <%= form.label :'Precio' %>
    <%= form.text_field :price, class: 'form-control', placeholder: 'Precio' %>
  </div>
  <div class="form-group">
    <%= form.label :'Foto' %>
    <%= form.file_field :photo, class: 'form-control', placeholder: 'Foto' %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>