<h1 class="title"><%= @product.title %></h1>
<%= image_tag @product.photo, width: 150 if @product.photo.attached? %>
<br /><br />
<p class="description"><%= @product.description %></p>
<span class="price"><%= @product.price %></span>
<br /><br />
<div class="d-flex flex-row">
  <%= link_to 'Edit Product', edit_product_path(@product), class: 'btn btn-primary mr-2' %>
  <%= button_to 'Delete Product', product_path(@product), class: 'btn btn-danger', method: :delete, form: { data: { turbo_confirm: "¿Estás seguro?" } } %>
</div>
